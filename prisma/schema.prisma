datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native","linux-musl-openssl-3.0.x"]
}

model Payment {
  id            String   @id @default(uuid())
  correlationId String
  amount        Float
  requestedAt   DateTime @default(now())
  processedAt   DateTime @default(now())
  provider      String
}

